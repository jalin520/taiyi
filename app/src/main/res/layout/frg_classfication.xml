<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bgLayout"
        android:paddingLeft="@dimen/frg_class_fiction_title_padding"
        android:paddingRight="@dimen/frg_class_fiction_title_padding">

        <ImageView
            android:id="@+id/frg_class_fiction_search"
            android:layout_width="@dimen/frg_class_fiction_image_width"
            android:layout_height="@dimen/frg_class_fiction_image_width"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search_2x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/frg_class_fiction_title"
            android:textColor="@color/common_gray_deep"
            android:textSize="@dimen/text_large" />


        <ImageView
            android:id="@+id/frg_class_fiction_message"
            android:layout_width="@dimen/frg_class_fiction_image_width"
            android:layout_height="@dimen/frg_class_fiction_image_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_message_2x" />

    </RelativeLayout>

    <include layout="@layout/c_divide_line" />

    <android.support.design.widget.TabLayout
        android:id="@+id/frg_class_fiction_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgLayout"
        app:tabSelectedTextColor="@color/text_green"
        app:tabTextColor="@color/text_black">


    </android.support.design.widget.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/common_gray_more_light" />

    <com.t1_network.taiyi.widget.CustomViewpager
        android:id="@+id/frg_class_fiction_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
