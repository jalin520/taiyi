<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/act_return_sale_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgRoot"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.t1_network.taiyi.controller.activity.ReturnSaleAct"
    tools:showIn="@layout/act_return_sale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/act_return_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_layout"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/return_sale_relativelayout_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/return_sale_relativelayout_service_height"
                android:layout_marginTop="@dimen/common_margin_top_bottom"
                android:background="@color/bg_layout">

                <TextView
                    android:id="@+id/return_sale_text_service_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/return_sale_service_type_margin_top"
                    android:layout_marginLeft="@dimen/common_margin_left_right"
                    android:layout_marginTop="@dimen/return_sale_service_type_margin_top"
                    android:text="@string/return_sale_text_service_type"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_mid"/>

                <Button
                    android:id="@+id/return_sale_btn_service_type_1"
                    android:layout_width="@dimen/return_sale_service_type_1_width"
                    android:layout_height="@dimen/return_sale_service_type_1_height"
                    android:layout_below="@id/return_sale_text_service_type"
                    android:layout_marginLeft="@dimen/common_margin_left_right"
                    android:background="@drawable/ic_return_sale_selected"
                    android:text="@string/return_sale_btn_service_type_1"
                    android:textColor="@color/text_orange"
                    android:textSize="@dimen/text_small"/>

                <Button
                    android:id="@+id/return_sale_btn_service_type_2"
                    android:layout_width="@dimen/return_sale_service_type_2_width"
                    android:layout_height="@dimen/return_sale_service_type_2_height"
                    android:layout_below="@id/return_sale_text_service_type"
                    android:layout_marginLeft="@dimen/return_sale_service_type_2_margin_left"
                    android:layout_toRightOf="@id/return_sale_btn_service_type_1"
                    android:background="@drawable/bg_btn_after_sale_2"
                    android:text="@string/return_sale_btn_service_type_2"
                    android:textColor="@color/text_gray_mid"
                    android:textSize="@dimen/text_small"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/return_sale_relativelayout_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top_bottom"
                android:background="@color/bgLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/return_sale_text_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/return_sale_service_type_margin_top"
                        android:layout_marginLeft="@dimen/common_margin_left_right"
                        android:layout_marginTop="@dimen/return_sale_service_type_margin_top"
                        android:text="@string/return_sale_text_amount"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_mid"/>

                    <TextView
                        android:id="@+id/return_sale_text_amount_refund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/return_sale_service_type_margin_top"
                        android:layout_marginLeft="@dimen/common_margin_left_right"
                        android:layout_marginTop="@dimen/return_sale_service_type_margin_top"
                        android:text="@string/return_sale_text_amount_refund"
                        android:textColor="@color/text_gray_deep"
                        android:textSize="@dimen/text_little"/>
                </LinearLayout>


                <include
                    layout="@layout/c_num_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_left_right"/>

                <TextView
                    android:id="@+id/return_sale_text_amout_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/return_sale_service_type_margin_top"
                    android:layout_marginLeft="@dimen/common_margin_left_right"
                    android:layout_marginTop="@dimen/return_sale_service_type_margin_top"
                    android:text="@string/return_sale_text_amout_tip"
                    android:textColor="@color/text_gray_mid"
                    android:textSize="@dimen/text_small"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/return_sale_relativelayout_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top_bottom"
                android:background="@color/bgLayout">

                <TextView
                    android:id="@+id/return_sale_text_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/return_sale_text_question_margin_botttom"
                    android:layout_marginLeft="@dimen/common_margin_left_right"
                    android:layout_marginTop="@dimen/return_sale_service_type_margin_top"
                    android:text="@string/return_sale_text_question"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_mid"/>

                <EditText
                    android:id="@+id/return_sale_edittext_question"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/return_sale_edittext_question_height"
                    android:layout_below="@id/return_sale_text_question"
                    android:layout_marginBottom="@dimen/return_sale_text_question_margin_botttom"
                    android:layout_marginLeft="@dimen/common_margin_left_right"
                    android:layout_marginRight="@dimen/common_margin_left_right"
                    android:background="@drawable/bg_return_sale_question"
                    android:gravity="top"
                    android:hint="@string/return_sale_edittext_question"
                    android:paddingBottom="@dimen/return_sale_edittext_question_padding_bottom"
                    android:paddingLeft="@dimen/return_sale_edittext_question_padding_left"
                    android:paddingRight="@dimen/return_sale_edittext_question_padding_right"
                    android:paddingTop="@dimen/return_sale_edittext_question_padding_top"
                    android:textColor="@color/text_gray_mid"
                    android:textSize="@dimen/text_small"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/return_sale_relativelayout_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top_bottom"
                android:background="@color/bg_layout">

                <TextView
                    android:id="@+id/return_sale_text_certificate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/return_sale_text_certificate_margin_bottom"
                    android:layout_marginLeft="@dimen/common_margin_left_right"
                    android:layout_marginTop="@dimen/return_sale_text_certificate_margin_top"
                    android:text="@string/return_sale_text_certificate"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_mid"/>


                <LinearLayout
                    android:id="@+id/return_sale_linearlayout_certificates_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/return_sale_text_certificate"
                    android:background="@color/bg_layout"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/common_margin_top_bottom"
                    android:paddingLeft="@dimen/common_margin_left_right"
                    android:paddingRight="@dimen/common_margin_left_right"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_evaluate_1"
                            android:layout_width="@dimen/evaluate_add_icon_width_height"
                            android:layout_height="@dimen/evaluate_add_icon_width_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_add_image"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_evaluate_2"
                            android:layout_width="@dimen/evaluate_add_icon_width_height"
                            android:layout_height="@dimen/evaluate_add_icon_width_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_add_image"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_evaluate_3"
                            android:layout_width="@dimen/evaluate_add_icon_width_height"
                            android:layout_height="@dimen/evaluate_add_icon_width_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_add_image"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_evaluate_4"
                            android:layout_width="@dimen/evaluate_add_icon_width_height"
                            android:layout_height="@dimen/evaluate_add_icon_width_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_add_image"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>

                <!--<LinearLayout-->

                <!--android:layout_below="@id/return_sale_text_certificate"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_marginRight="@dimen/common_margin_left_right"-->
                <!--android:layout_marginBottom="@dimen/return_sale_linearlayout_certificates_bottom"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
                <!--<LinearLayout-->
                <!--android:id="@+id/return_sale_linearlayout_certificates"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:weightSum="4">-->

                <!--</LinearLayout>-->
                <!--<ImageView-->
                <!--android:id="@+id/act_return_sale_image_add"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/common_margin_left_right"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/ic_add_pic" />-->
                <!--</LinearLayout>-->


                <TextView
                    android:id="@+id/return_sale_text_certificate_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/return_sale_linearlayout_certificates_root"
                    android:layout_marginBottom="@dimen/return_sale_text_certificate_tip_margin_bottom"
                    android:layout_marginLeft="@dimen/return_sale_text_certificate_tip_margin_left"
                    android:text="@string/return_sale_text_certificate_tip"
                    android:textColor="@color/text_gray_mid"
                    android:textSize="@dimen/text_small"/>
            </RelativeLayout>

            <Button
                android:id="@+id/act_return_sale_btn_submit"
                android:layout_width="@dimen/return_sale_btn_submit_width"
                android:layout_height="@dimen/btn_big_height"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/return_sale_btn_submit_margin_bottom"
                android:layout_marginTop="@dimen/return_sale_btn_submit_margin_top"
                android:background="@drawable/bg_btn_ripple_1"
                android:text="@string/return_sale_btn_submit"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_mid"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
