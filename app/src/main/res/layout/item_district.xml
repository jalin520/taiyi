<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right">

        <TextView
            android:id="@+id/item_district_text_title"
            android:layout_width="match_parent"
            android:layout_height="47.41dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="我的全部订单"
            android:textColor="@color/textLight"
            android:textSize="@dimen/text_mid" />

        <ImageView
            android:id="@+id/item_district_image_arrow"
            android:layout_width="12dp"
            android:layout_height="16.59dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

    </RelativeLayout>


    <View
        android:id="@+id/c_setting_view_bottom_line_full"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/bg_divide_line"
        android:visibility="visible" />
</LinearLayout>