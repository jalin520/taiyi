<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_good_shop_cart_view_suppose_you_want_image_good"
        android:layout_width="@dimen/item_good_shop_cart_view_suppose_you_want_image_good"
        android:layout_height="@dimen/item_good_shop_cart_view_suppose_you_want_image_good"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/item_good_shop_cart_view_suppose_you_want_image_good_margin_bottom"
        android:src="@drawable/default_good" />


    <TextView
        android:id="@+id/item_good_shop_cart_view_suppose_you_want_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/item_good_shop_cart_view_suppose_you_want_text_name_margin_bottom"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="欧姆龙电子血压计HEMN-7052家用上臂全自动式测量血压仪器血压仪器"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_little" />


    <TextView
        android:id="@+id/item_good_shop_cart_view_suppose_you_want_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="￥552.00"
        android:textColor="@color/text_green"
        android:textSize="@dimen/text_less_mid" />


</LinearLayout>

