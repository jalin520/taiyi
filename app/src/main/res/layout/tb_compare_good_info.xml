<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="none"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_layout"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bg_layout">

            <RelativeLayout
                android:id="@+id/tool_bar_btn_back"
                android:layout_width="@dimen/common_tool_bar_btn_back"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/toolbar_btn_back_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:layout_marginRight="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_back_gray" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tool_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="对比"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textToolbarTitle" />

            <RelativeLayout
                android:id="@+id/compar_good_title_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="11.77dp">

                <ImageView
                    android:id="@+id/compar_good_icon"
                    android:layout_width="24.71dp"
                    android:layout_height="24.71dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_shopcart_green" />

                <TextView
                    android:id="@+id/compar_good_cart_number"
                    android:layout_width="15.94dp"
                    android:layout_height="15.94dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@id/compar_good_icon"
                    android:layout_marginRight="-10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_shop_cart_num_tip"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_little" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/compar_good_title_duibi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/compar_good_title_cart"
                android:paddingRight="11.77dp">

                <ImageView
                    android:id="@+id/compar_good_duibi_icon"
                    android:layout_width="24.71dp"
                    android:layout_height="24.71dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_compare" />

                <TextView
                    android:id="@+id/compar_good_compare_number"
                    android:layout_width="15.94dp"
                    android:layout_height="15.94dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@id/compar_good_duibi_icon"
                    android:layout_marginRight="-10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_shop_cart_num_tip"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_little" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>


