<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:showDividers="none"
                                            android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/common_green"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/common_green">

            <RelativeLayout
                android:id="@+id/tool_bar_btn_back"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="24.7dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:layout_marginRight="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_back"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tb_common_order_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="待付款订单"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_large"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_divide_line"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>


