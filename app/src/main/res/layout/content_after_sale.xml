<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.t1_network.taiyi.controller.activity.AfterSaleAct"
    tools:showIn="@layout/act_after_sale">

    <cn.walink.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_to_refresh_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrMode="both">

    </cn.walink.pulltorefresh.library.PullToRefreshListView>

    <com.t1_network.taiyi.widget.TipView
        android:id="@+id/c_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"></com.t1_network.taiyi.widget.TipView>
</RelativeLayout>
