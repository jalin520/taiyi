<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_root"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_compar_good_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/compar_padding_top"
        android:text="商品名称"
        android:textColor="@color/text_green"
        android:textSize="@dimen/text_small"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:layout_marginBottom="@dimen/compar_margin"
        android:layout_marginTop="@dimen/compar_margin"

        android:background="@color/bg_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/compar_margin"
        android:layout_marginRight="@dimen/compar_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_compar_good_info_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="欧姆龙电子血压计HEM-7052"
            android:textColor="@color/text_gray_small1"
            android:textSize="@dimen/text_small"/>

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/item_compar_good_info_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="-7052"
            android:textColor="@color/text_gray_small1"
            android:textSize="@dimen/text_small"/>
    </LinearLayout>

</LinearLayout>