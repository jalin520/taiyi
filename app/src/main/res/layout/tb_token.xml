<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="none"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff0000"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:id="@+id/tool_bar_btn_back"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/toolbar_btn_back_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:layout_marginRight="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:background="@null"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_back" />
            </RelativeLayout>


            <!--<TextView-->
            <!--android:id="@+id/tool_bar_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:text="@string/title_activity_token"-->
            <!--android:textColor="@color/textWhite"-->
            <!--android:textSize="@dimen/textToolbarTitle"/>-->

            <TextView
                android:id="@+id/act_token_text_exchange_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/common_margin_left_right"
                android:text="@string/act_token_text_exchange_token"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/text_mid" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_token_layout_total_height"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_token_layout_title_height"
            android:layout_marginTop="@dimen/act_token_text_token_num_margin_top"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_token_text_token_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/textTokenTotal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/act_token_text_transaction_detail_margin_left"
                    android:layout_marginRight="@dimen/act_token_text_transaction_detail_margin_right"
                    android:src="@drawable/ic_money" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/act_token_text_pieces"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/text_mid" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/act_token_text_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/act_token_text_title_margin_bottom"
            android:layout_marginRight="@dimen/act_token_text_transaction_detail_margin_left"
            android:text="使用帮助"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small" />

    </RelativeLayout>
</android.support.design.widget.AppBarLayout>