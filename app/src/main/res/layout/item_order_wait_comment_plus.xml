<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_order_wait_pay_layout_good_height"
        android:paddingBottom="@dimen/item_order_wait_pay_layout_good_info_padding_top_bottom"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right"
        android:paddingTop="@dimen/item_order_wait_pay_layout_good_info_padding_top_bottom">

        <ImageView
            android:id="@+id/good_image"
            android:layout_width="@dimen/item_order_wait_pay_image_good"
            android:layout_height="@dimen/item_order_wait_pay_image_good"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_order_wait_pay_image_good_padding_right"
            android:background="@drawable/default_good"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/orderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/good_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="鱼跃 制氧机 YU 300,鱼跃 制氧机 YU300月月制氧机Yu300月制氧机Yu300"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_mid"/>

        <TextView
            android:id="@+id/order_is_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/orderName"
            android:layout_below="@id/orderName"
            android:paddingTop="6dp"
            android:text="￥1588.00"
            android:textColor="@color/text_green"
            android:textSize="@dimen/text_small"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/orderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/order_is_seven"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/order_is_seven"
            android:text="X1件"
            android:textColor="@color/text_gray_mid"
            android:textSize="@dimen/text_small"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="@dimen/item_order_wait_pay_image_arrow"
            android:layout_height="@dimen/item_order_wait_pay_image_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right"
            android:visibility="gone"/>

        <Button
            android:clickable="true"
            android:id="@+id/commentOrder"
            android:layout_width="@dimen/btn_large_width"
            android:layout_height="@dimen/btn_big_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_left_right"
            android:background="@drawable/bg_btn_ripple_1"
            android:focusable="false"
            android:text="@string/act_order_list_btn_comment"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_mid"/>

    </RelativeLayout>
</LinearLayout>