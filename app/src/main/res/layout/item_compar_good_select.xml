<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:paddingLeft="@dimen/card_margin"
              android:paddingRight="@dimen/card_margin"
              android:id="@+id/item_compar_root"
              android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/compar_item_heigth"
        >
        <ImageView
            android:id="@+id/item_compar_iv_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/radiobutton"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/item_compar_image_good"
            android:layout_width="@dimen/frg_shoppintcart_image_width"
            android:layout_height="@dimen/frg_shoppintcart_image_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/card_margin_left"
            android:layout_marginRight="@dimen/card_margin_right"
            android:layout_marginTop="@dimen/card_margin_right"
            android:layout_toRightOf="@id/item_compar_iv_checked"
            android:scaleType="centerCrop"
            android:src="@drawable/default_good"/>

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/item_compar_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frg_class_fiction_image_width"
            android:layout_toRightOf="@+id/item_compar_image_good"
            android:text="商品名称"
            android:textColor="@color/text_gray_small"
            android:textSize="@dimen/text_less_mid"/>

        <LinearLayout
            android:layout_marginTop="@dimen/card_margin_right"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_compar_good_name"
            android:layout_toRightOf="@+id/item_compar_image_good">

            <TextView
                android:id="@+id/item_compar_good_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_shop_in_shoppintcart_text_good"
                android:textColor="@color/text_gray_mid"
                android:textSize="@dimen/text_little"/>

            <TextView
                android:id="@+id/item_compar_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/item_shop_in_shoppintcart_text_good_price"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_less_mid"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/item_compar_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divide_line"/>

</LinearLayout>