<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_root"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.t1_network.taiyi.controller.activity.OrderComfirmAct"
    tools:showIn="@layout/act_order_comfirm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/act_good_list_root">

        <LinearLayout
            android:id="@+id/order_comfrim_layout_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_margin">

            <RelativeLayout
                android:id="@+id/comfirm_order_layout_please_select_address_no_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/act_comfirm_order_layout_please_select_address_no_address_height"
                android:background="@color/bgLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/comfirm_order_act_text_please_select_address"
                    android:textColor="@color/text_gray_mid" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/act_comfirm_order_layout_please_select_address_margin_top"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comfirm_order_layout_please_select_address_has_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/act_comfirm_order_layout_please_select_address_no_address_height"
                android:background="@color/bgLayout"
                android:visibility="gone">

                <TextView
                    android:id="@+id/comfirm_order_text_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/act_comfirm_order_layout_please_select_address_margin_top"
                    android:layout_marginTop="@dimen/act_comfirm_order_layout_please_select_address_margin_top"
                    android:text="@string/comfirm_order_act_text_consignee"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_mid" />

                <TextView
                    android:id="@+id/comfirm_order_text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/act_comfirm_order_layout_please_select_address_margin_right"
                    android:layout_marginTop="@dimen/act_comfirm_order_layout_please_select_address_margin_top"
                    android:text="15680030824"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_mid" />

                <TextView
                    android:id="@+id/comfirm_order_text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/comfirm_order_text_consignee"
                    android:layout_marginLeft="@dimen/act_comfirm_order_layout_please_select_address_margin_top"
                    android:layout_marginTop="@dimen/act_comfirm_order_layout_please_select_address_margin_top"
                    android:text="广东省珠海市高新区哈工大路1号博士楼C206"
                    android:textColor="@color/text_gray_mid"
                    android:textSize="@dimen/text_small" />

                <ImageView
                    android:layout_width="@dimen/item_order_wait_pay_image_arrow"
                    android:layout_height="@dimen/item_order_wait_pay_image_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_left_right"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>


            <include layout="@layout/c_divide_line" />


            <LinearLayout
                android:id="@+id/comfirm_order_layout_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_root"
                android:orientation="vertical">


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/comfirm_order_tv_invoice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/act_comfirm_order_tv_invoice"
                android:layout_marginTop="@dimen/common_margin"
                android:background="@color/bgLayout"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/common_margin_left_right">

                <TextView
                    android:id="@+id/comfirm_order_act_text_use_token_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/comfirm_order_act_text_bill_tip"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_small" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_left_right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/act_order_comfirm_text_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/card_margin"
                        android:text="不需要发票"
                        android:textColor="@color/text_gray_deep"
                        android:textSize="@dimen/text_small" />

                    <ImageView
                        android:layout_width="@dimen/item_order_wait_pay_image_arrow"
                        android:layout_height="@dimen/item_order_wait_pay_image_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_arrow_right" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/layout_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/act_comfirm_order_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@color/bg_layout"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_order_comfirm_text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:text="总额:￥1688"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_mid" />

            <TextView
                android:id="@+id/act_order_comfirm_text_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共2件商品 含运费￥20"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_little" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/act_comfirm_order_act_btn_sumit_order_width"
            android:layout_height="@dimen/act_comfirm_order_act_btn_sumit_order_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin_left_right"
            android:background="@drawable/btn_in_order_input_full_info"
            android:gravity="center">

            <TextView
                android:id="@+id/comfirm_order_act_btn_sumit_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comfirm_order_act_btn_sumit_order"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_mid" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
