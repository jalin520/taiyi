<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_layout">

    <ImageView
        android:id="@+id/item_shop_cart_good_normal_image_select"
        android:layout_width="@dimen/item_shop_cart_good_normal_image_select"
        android:layout_height="@dimen/item_shop_cart_good_normal_image_select"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:src="@drawable/ic_select_selected" />

    <ImageView
        android:id="@+id/item_shop_cart_good_normal_image_good"
        android:layout_width="@dimen/item_shop_cart_good_normal_image_good"
        android:layout_height="@dimen/item_shop_cart_good_normal_image_good"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_shop_cart_good_normal_image_good_margin_right"
        android:layout_toRightOf="@+id/item_shop_cart_good_normal_image_select"
        android:src="@drawable/test_good" />

    <LinearLayout
        android:id="@+id/item_shop_cart_good_normal_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_shop_cart_good_normal_layout_info_margin_top"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:layout_marginTop="@dimen/item_shop_cart_good_normal_layout_info_margin_top"
        android:layout_toRightOf="@+id/item_shop_cart_good_normal_image_good"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_shop_cart_good_normal_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="欧姆龙电子血压计HEMN-7052家用上臂全自动式测量血压仪器血压仪器"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_less_mid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin_left_right"
            android:layout_marginTop="@dimen/common_margin_left_right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_shop_cart_good_normal_text_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥552.00"
                android:textColor="@color/text_gray_mid"
                android:textSize="@dimen/text_less_mid" />

            <TextView
                android:id="@+id/item_shop_cart_good_normal_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_left_right"
                android:text="￥285.00"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_mid" />


        </LinearLayout>

        <include layout="@layout/c_num_picker" />

    </LinearLayout>

    <include
        layout="@layout/c_divide_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_divide_line_horizontal_height"
        android:layout_alignParentBottom="true" />
</RelativeLayout>