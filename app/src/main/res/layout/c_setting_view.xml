<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLayout"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">
    <!--@dimen/c_setting_view_item_height-->
    <View
        android:id="@+id/c_setting_view_top_line_full"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/bg_divide_line"
        android:visibility="gone" />


    <View
        android:id="@+id/c_setting_view_top_line_wrap"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_marginLeft="@dimen/c_setting_view_item_common_margin"
        android:layout_marginRight="@dimen/c_setting_view_item_common_margin"
        android:background="@color/bg_divide_line"

        android:visibility="gone" />


    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right">

        <ImageView
            android:id="@+id/c_setting_view_image_icon"
            android:layout_width="@dimen/c_setting_view_item_icon_width_height"
            android:layout_height="@dimen/c_setting_view_item_icon_width_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/c_setting_view_item_common_margin"
            android:layout_marginRight="@dimen/c_setting_view_item_icon_margin_right"
            android:src="@drawable/ic_all_order"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_setting_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/c_setting_view_image_icon"
            android:text="我的全部订单"
            android:textColor="@color/textLight"
            android:textSize="@dimen/text_mid" />

        <ImageView
            android:id="@+id/c_setting_view_image_tip"
            android:layout_width="@dimen/c_setting_view_item_common_margin"
            android:layout_height="@dimen/c_setting_view_item_icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View
        android:id="@+id/c_setting_view_bottom_line_full"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/bg_divide_line"
        android:visibility="gone" />

</LinearLayout>