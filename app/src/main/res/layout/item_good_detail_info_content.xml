<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/card_margin1"
        android:layout_marginBottom="@dimen/card_margin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_good_detail_info_tv_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textColor="@color/text_gray_mid"
            android:textSize="@dimen/ty_22px"/>

        <TextView
            android:textSize="@dimen/ty_22px"
            android:id="@+id/item_good_detail_info_tv_content_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="欧姆龙电子血压计HEM-7052"
            android:textColor="@color/text_black"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/bg_divide_line"
        />

</LinearLayout>