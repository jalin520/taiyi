<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_and_register_ll_back"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbar_btn_back_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/toolbar_btn_back_padding_left_and_right"
                android:layout_marginRight="@dimen/toolbar_btn_back_padding_left_and_right"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/act_login_and_register_text_back"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_mid"/>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/login_act_tab_layout"
            style="@style/LoginAndRegisterTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </LinearLayout>
</LinearLayout>



