<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.t1_network.taiyi.controller.activity.LoginAndRegisterAct"
    tools:showIn="@layout/activity_login_and_register">

    <android.support.v4.view.ViewPager
        android:id="@+id/login_act_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <LinearLayout
        android:layout_width="@dimen/act_content_share_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/frg_register_title_width">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/frg_login_by_shear_qq"
                android:layout_width="@dimen/frg_register_ll_shear_width_icon"
                android:layout_height="@dimen/frg_register_ll_shear_width_icon"
                android:background="@drawable/bg_shear"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/frg_register_ll_shear_image_width_icon"
                    android:layout_height="@dimen/frg_register_ll_shear_image_height_icon"
                    android:src="@drawable/ic_login_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frg_login_by_shear_qq_text"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/frg_register_ll_shear_tv" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/frg_login_by_shear_wechat"
                android:layout_width="@dimen/frg_register_ll_shear_width_icon"
                android:layout_height="@dimen/frg_register_ll_shear_width_icon"
                android:background="@drawable/bg_shear"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="@dimen/frg_register_ll_shear_image_width_icon"
                    android:layout_height="@dimen/frg_register_ll_shear_image_height_icon"
                    android:src="@drawable/ic_login_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frg_login_by_shear_wechat_text"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/frg_register_ll_shear_tv" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/frg_login_by_shear_sina"
                android:layout_width="@dimen/frg_register_ll_shear_width_icon"
                android:layout_height="@dimen/frg_register_ll_shear_width_icon"
                android:background="@drawable/bg_shear"

                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="@dimen/frg_register_ll_shear_image_width_icon"
                    android:layout_height="@dimen/frg_register_ll_shear_image_height_icon"
                    android:src="@drawable/ic_login_sina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frg_login_by_shear_sina_text"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/frg_register_ll_shear_tv" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
