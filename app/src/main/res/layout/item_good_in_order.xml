<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_root"
    android:orientation="vertical">

    <include layout="@layout/c_divide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_comfirm_order_height"
        android:layout_marginTop="@dimen/common_margin_top_bottom"
        android:background="@color/bg_layout"
        android:paddingBottom="@dimen/item_order_wait_pay_layout_good_info_padding_top_bottom"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right"
        android:paddingTop="@dimen/item_order_wait_pay_layout_good_info_padding_top_bottom">

        <ImageView
            android:id="@+id/item_good_in_order_image_good"
            android:layout_width="@dimen/item_order_wait_pay_image_good"
            android:layout_height="@dimen/item_order_wait_pay_image_good"
            android:layout_marginRight="@dimen/item_order_wait_pay_image_good_padding_right"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/orderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_good_list_title_margin_left"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/item_good_in_order_image_good"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:id="@+id/order_is_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/orderName"
            android:layout_below="@id/orderName"
            android:paddingTop="@dimen/item_good_list_title_margin_top_small"
            android:text="￥0.00"
            android:textColor="@color/text_green"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/orderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/order_is_seven"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/order_is_seven"
            android:text="X 0"
            android:textColor="@color/text_gray_mid"
            android:textSize="@dimen/text_small" />

        <ImageView
            android:layout_width="@dimen/item_order_wait_pay_image_arrow"
            android:layout_height="@dimen/item_order_wait_pay_image_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_divide_line_horizontal_height"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:background="@color/common_gray_light" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_good_in_order_height"
        android:background="@color/bg_layout"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right">

        <TextView
            android:id="@+id/item_good_in_order_tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_good_in_order_icon_margin_top"
            android:text="使用代币(本产品最多可使用0代币)"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/item_good_in_order_icon_margin_top"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/item_good_in_order_text_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您有0代币可以使用,已抵用0代币"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/item_good_in_order_icon_ll_et_width"
            android:layout_height="@dimen/item_good_in_order_icon_ll_et_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin_left_right"
            android:background="@drawable/btn_in_order_full_info"
            android:gravity="center">

            <EditText
                android:id="@+id/item_good_in_order_edit_voucher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/text_orange"
                android:textColorHint="@color/text_orange"
                android:textSize="@dimen/text_mid" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_divide_line_horizontal_height"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:background="@color/common_gray_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_order_wait_pay_layout_order_status_height"
        android:background="@color/bg_layout"
        android:paddingRight="@dimen/common_margin_left_right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计:"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_mid" />

            <TextView
                android:id="@+id/item_good_in_order_text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_mid" />


        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_divide_line_horizontal_height"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:background="@color/common_gray_light" />


</LinearLayout>
