<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_num_picker_box"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/c_num_picker_image_del"
        android:layout_width="@dimen/c_num_picker_common_width"
        android:layout_height="@dimen/c_num_picker_common_height"
        android:gravity="center"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_num_picker_del" />

    <View
        android:layout_width="@dimen/c_divide_line_vertical_width"
        android:layout_height="match_parent"
        android:background="@color/bg_divide_line" />

    <TextView
        android:id="@+id/c_num_picker_text_num"
        android:layout_width="@dimen/c_num_picker_num_width"
        android:layout_height="@dimen/c_num_picker_common_height"
        android:gravity="center"
        android:text="1" />

    <View
        android:layout_width="@dimen/c_divide_line_vertical_width"
        android:layout_height="match_parent"
        android:background="@color/bg_divide_line" />

    <ImageView
        android:id="@+id/c_num_picker_image_add"
        android:layout_width="@dimen/c_num_picker_common_width"
        android:layout_height="@dimen/c_num_picker_common_height"
        android:gravity="center"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_num_picker_add" />
</LinearLayout>

