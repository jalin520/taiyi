<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="none"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_layout"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bg_layout">

            <RelativeLayout
                android:id="@+id/tool_bar_btn_back"
                android:layout_width="@dimen/common_tool_bar_btn_back"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/toolbar_btn_back_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:layout_marginRight="@dimen/toolbar_btn_back_padding_left_and_right"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_back_gray"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tool_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/textToolbarTitle" />





            <RelativeLayout
                android:id="@+id/compar_good_title_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/common_margin_big">

                <ImageView
                    android:id="@+id/compar_good_cart_icon"
                    android:layout_width="@dimen/compar_title_icon_width_height"
                    android:layout_height="@dimen/compar_title_icon_width_height"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_big"
                    android:src="@drawable/ic_shopcart_green" />

                <TextView
                    android:layout_width="@dimen/compar_title_text_count_width_height"
                    android:layout_height="@dimen/compar_title_text_count_width_height"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@id/compar_good_cart_icon"
                    android:layout_marginRight="@dimen/compar_title_text_count_margin_right"
                    android:layout_marginTop="@dimen/compar_title_margin_top"
                    android:background="@drawable/bg_shop_cart_num_tip"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_little" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_toLeftOf="@id/compar_good_title_cart"
                android:id="@+id/compar_good_title_compare"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/common_margin_big">

                <ImageView
                    android:id="@+id/compar_good_compare_icon"
                    android:layout_width="@dimen/compar_title_icon_width_height"
                    android:layout_height="@dimen/compar_title_icon_width_height"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_big"
                    android:src="@drawable/ic_compare" />

                <TextView
                    android:layout_width="@dimen/compar_title_text_count_width_height"
                    android:layout_height="@dimen/compar_title_text_count_width_height"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@id/compar_good_compare_icon"
                    android:layout_marginRight="@dimen/compar_title_text_count_margin_right"
                    android:layout_marginTop="@dimen/compar_title_margin_top"
                    android:background="@drawable/bg_shop_cart_num_tip"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_little" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_divide_line" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>


