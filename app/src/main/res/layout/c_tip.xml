<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/c_tip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/c_tip_image"
        android:layout_width="@dimen/ty_240px"
        android:layout_height="@dimen/ty_240px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_no_data" />

    <TextView
        android:id="@+id/c_tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ty_30px"
        android:gravity="center"
        android:text="这里什么都没有哦!"
        android:textSize="@dimen/ty_28px" />

</LinearLayout>