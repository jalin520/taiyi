<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/transparent"
             tools:context="com.t1_network.taiyi.controller.activity.UpdatePasswrodAct">


    <RelativeLayout
        android:id="@+id/act_register_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:paddingTop="@dimen/act_title_top">


        <LinearLayout
            android:id="@+id/act_forget_pwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/act_forget_pwd_title"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_large"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/act_title_line_bottom"
                    android:layout_marginTop="@dimen/act_title_line_top"
                    android:background="@color/text_white"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/act_forget_pwd_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/act_content_margin"
            android:orientation="vertical"
            android:paddingTop="@dimen/act_content_padding_top">


            <RelativeLayout

                android:layout_width="@dimen/frg_register_et_width"
                android:layout_height="@dimen/frg_register_et_height">


                <EditText
                    android:id="@+id/act_forget_pwd_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/feg_register_check_phone_edit_mobile_text"
                    android:inputType="number"
                    android:textColor="@color/bgLayout"
                    android:textColorHint="@color/btn_in_verify_full"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/act_content_view_line_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/frg_register_et_width"
                android:layout_height="@dimen/frg_register_et_height">


                <EditText
                    android:id="@+id/act_forget_pwd_et_verify_code"
                    android:layout_width="@dimen/frg_register_verify_width"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/frg_register_edit_verify_code_text"
                    android:textColor="@color/bgLayout"
                    android:textColorHint="@color/btn_in_verify_full"/>

                <TextView
                    android:id="@+id/act_forget_pwd_tv_send_verify_code"
                    android:layout_width="94.12dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_in_verify_full_info"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/frg_register_tv_btn_padding"
                    android:text="@string/act_register_btn_git_verify_code"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_small"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/act_content_view_line_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/frg_register_et_width"
                android:layout_height="@dimen/frg_register_et_height">

                <EditText
                    android:id="@+id/act_forget_pwd_et_password"
                    android:layout_width="@dimen/frg_register_password_width"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/frg_login_et_pwd"
                    android:inputType="textPassword"
                    android:textColor="@color/bgLayout"
                    android:textColorHint="@color/btn_in_verify_full"/>

                <TextView
                    android:id="@+id/act_forget_pwd_tv_send_password_show"
                    android:layout_width="@dimen/frg_register_tv_show_password_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_in_verify_full_info"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/frg_register_tv_btn_padding"
                    android:text="@string/act_register_btn_send_show_password_code"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_small"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/act_content_view_line_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_white"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/act_forget_pwd_btn_login"
                android:layout_width="@dimen/frg_register_et_width"
                android:layout_height="@dimen/frg_register_tv_btn_width"
                android:layout_marginTop="@dimen/frg_register_input_margin_top"
                android:background="@drawable/btn_in_login_full_info"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/act_forget_pwd_btn_ok"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_big"/>


        </LinearLayout>



    </RelativeLayout>
</FrameLayout>
