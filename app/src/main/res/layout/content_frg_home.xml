<?xml version="1.0" encoding="utf-8"?>
<com.t1_network.taiyi.widget.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frg_home_good_content_sv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.t1_network.core.widget.BannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frg_home_good_content_carousel">

        </com.t1_network.core.widget.BannerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/frg_home_good_content_carousel"
            android:visibility="gone">

            <com.t1_network.taiyi.widget.CompatViewPager
                android:id="@+id/home_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/home_dotLayout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/home_dotLayout_point"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:padding="@dimen/home_dotLayout_point_padding">

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="17.65dp"
            android:background="@color/bgRoot">

            <com.t1_network.taiyi.widget.bargainGood.BargainGoodView
                android:id="@+id/frg_home_bargain_good_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.t1_network.taiyi.widget.bargainGood.BargainGoodView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_module1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_module2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


        <RelativeLayout
            android:layout_width="@dimen/home_dotLayout_adv_width"
            android:layout_height="@dimen/home_dotLayout_adv_height_big"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/home_dotLayout_adv_margin_top">

            <GridLayout
                android:id="@+id/frg_home_good_gl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/home_image_btn_in_info"
                android:columnCount="3"
                android:rowCount="2"></GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/frg_home_good_gl_adv1_margin"
                android:layout_marginLeft="@dimen/frg_home_good_gl_adv1_margin"
                android:layout_marginRight="@dimen/frg_home_good_gl_adv1_margin"
                android:layout_marginTop="@dimen/frg_home_good_gl_adv1_margin"
                android:background="@drawable/home_image_btn_in_info" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/home_dotLayout_adv_width"
            android:layout_height="@dimen/home_dotLayout_adv_height_more"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/home_dotLayout_adv_margin_top">

            <GridLayout
                android:id="@+id/frg_home_good_gl_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/home_image_btn_in_info"
                android:columnCount="4"
                android:rowCount="3"></GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/frg_home_good_gl_adv1_margin"
                android:layout_marginLeft="@dimen/frg_home_good_gl_adv1_margin"
                android:layout_marginRight="@dimen/frg_home_good_gl_adv1_margin"
                android:layout_marginTop="@dimen/frg_home_good_gl_adv1_margin"
                android:background="@drawable/home_image_btn_in_info" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/frg_home_layout_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>


    </LinearLayout>

</com.t1_network.taiyi.widget.MyScrollView>