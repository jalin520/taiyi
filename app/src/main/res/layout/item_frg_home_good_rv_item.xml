<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_frg_home_good_rv_root_ll_height"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_frg_home_good_rv_root"
        android:layout_width="@dimen/item_frg_home_good_rv_root_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_frg_home_good_rv_root_margin_left"
        card:cardCornerRadius="5dp"
        card:cardElevation="0dp"
        card:cardMaxElevation="0dp"
        card:cardPreventCornerOverlap="true"
        card:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_frg_home_good_rv_icon"
                android:layout_width="@dimen/item_frg_home_good_rv_icon_width"
                android:layout_height="@dimen/item_frg_home_good_rv_icon_height"
                android:scaleType="fitXY"
                android:src="@drawable/rv_good_0" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/item_frg_home_good_rv_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_frg_home_good_rv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_frg_home_good_rv_text"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/item_frg_home_good_rv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_frg_home_good_rv_price"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>