<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgRoot"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.t1_network.taiyi.controller.activity.EvaluateAct"
    tools:showIn="@layout/act_evaluate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/act_evaluate_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/evaluate_image_margin_botton">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginTop="@dimen/card_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/act_evaluate_iv_icon"
                        android:layout_width="@dimen/evaluate_image_icon_width_height"
                        android:layout_height="@dimen/evaluate_image_icon_width_height"
                        android:src="@drawable/test_good" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/evaluate_title_text_name_margin_left"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/act_evaluate_text_good_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="鱼跃 制氧机 YU300鱼跃 制氧机 YU300鱼跃 制氧机 YU300鱼跃 制氧机 YU300"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_mid" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/evaluate_title_text_name_margin_left"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="@dimen/common_margin_big"
                                android:text="评价: "
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_mid" />

                            <RatingBar
                                android:id="@+id/act_evaluate_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/btn_mid_height"
                                android:layout_marginTop="@dimen/common_margin_big"
                                android:max="5"
                                android:numStars="5"
                                android:progressDrawable="@drawable/bg_rating"
                                android:stepSize="1" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:background="@color/bg_divide_line" />

                <EditText
                    android:id="@+id/act_evaluate_et"
                    android:layout_width="match_parent"
                    android:layout_height="65.88dp"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginTop="@dimen/card_margin"
                    android:background="@null"
                    android:enabled="true"
                    android:gravity="top"
                    android:hint="点评您购买的商品,更容易获得代币哦!"
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgLayout"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_margin_top_bottom"
                android:paddingLeft="@dimen/common_margin_left_right"
                android:paddingRight="@dimen/common_margin_left_right"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_evaluate_1"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_add_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/image_evaluate_2"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:src="@drawable/bg_add_image"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/image_evaluate_3"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:src="@drawable/bg_add_image"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/image_evaluate_4"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:src="@drawable/bg_add_image"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgLayout"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_margin_left_right"
                android:paddingRight="@dimen/common_margin_left_right"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/image_evaluate_5"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:src="@drawable/bg_add_image"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/image_evaluate_6"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:src="@drawable/bg_add_image"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/image_evaluate_7"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:src="@drawable/bg_add_image"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/image_evaluate_8"
                        android:layout_width="@dimen/evaluate_add_icon_width_height"
                        android:layout_height="@dimen/evaluate_add_icon_width_height"
                        android:src="@drawable/bg_add_image"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_evaluate_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_layout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/evaluate_add_padding_bottom" />

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bgLayout">

        <Button
            android:id="@+id/act_evaluate_btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/card_margin1"
            android:background="@drawable/btn_in_evaluate_info"
            android:text="提交"
            android:textColor="@color/btnText_1"
            android:textSize="@dimen/text_mid" />

    </RelativeLayout>


</RelativeLayout>
