<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:background="@color/bg_layout"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_top_bottom"
        android:background="@color/bg_root"></View>

    <include layout="@layout/c_divide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_order_wait_pay_layout_order_status_height"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:layout_marginRight="@dimen/common_margin_left_right">

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="订单号：123456789"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:id="@+id/orderState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待支付"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/text_mid" />
    </RelativeLayout>

    <View
        android:id="@+id/item_good_in_order_view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_divide_line_horizontal_height"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:background="@color/bg_divide_line"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_order_wait_pay_layout_good_info_padding_top_bottom"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right"
        android:paddingTop="@dimen/item_order_wait_pay_layout_good_info_padding_top_bottom">

        <ImageView
            android:id="@+id/good_image"
            android:layout_width="@dimen/item_order_wait_pay_image_good"
            android:layout_height="@dimen/item_order_wait_pay_image_good"
            android:layout_marginRight="@dimen/item_order_wait_pay_image_good_padding_right"
            android:background="@drawable/test_good"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/orderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/good_image"
            android:text="鱼跃 制氧机 YU 300"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:id="@+id/order_is_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/orderName"
            android:layout_below="@id/orderName"
            android:paddingTop="6dp"
            android:text="此商品支持7天无理由退货"
            android:textSize="@dimen/text_little" />

        <TextView
            android:id="@+id/orderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/good_image"
            android:layout_alignLeft="@id/orderName"
            android:text="X2"
            android:textColor="@color/text_gray_mid"
            android:textSize="@dimen/text_mid" />

        <ImageView
            android:layout_width="@dimen/item_order_wait_pay_image_arrow"
            android:layout_height="@dimen/item_order_wait_pay_image_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View
        android:id="@+id/item_good_in_order_view_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_divide_line_horizontal_height"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:background="@color/bg_divide_line"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/orderMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总额：￥1588.00"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="时间：2015-10-22 17：30：20"
            android:textColor="@color/text_gray_mid"
            android:textSize="@dimen/text_mid" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_top_bottom"
        android:layout_marginTop="@dimen/common_margin_top_bottom">

        <Button
            android:id="@+id/ToCashBackOrder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_big_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_btn_ripple_2"
            android:text="@string/act_order_list_btn_cashback"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_mid" />

        <Button
            android:id="@+id/returnOrder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_big_height"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@id/ToCashBackOrder"
            android:background="@drawable/bg_btn_ripple_3"
            android:text="@string/act_order_list_btn_return"
            android:textColor="@color/text_gray_mid"
            android:textSize="@dimen/text_mid" />

    </RelativeLayout>

</LinearLayout>
