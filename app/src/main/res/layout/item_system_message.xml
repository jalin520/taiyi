<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_root"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgLayout"
        android:paddingBottom="@dimen/common_margin_top_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_margin_left_right"
                android:paddingLeft="@dimen/common_margin_left_right"
                android:paddingRight="@dimen/common_margin_left_right"
                android:paddingTop="@dimen/common_margin_left_right">

                <ImageView
                    android:id="@+id/item_my_advice_iv_icon"
                    android:layout_width="@dimen/common_margin_top_bottom"
                    android:layout_height="@dimen/common_margin_top_bottom"
                    android:src="@drawable/ic_message_icon" />

                <TextView
                    android:id="@+id/item_my_advice_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_left_right"
                    android:text="系统消息"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_mid" />

            </LinearLayout>

            <TextView
                android:id="@+id/systemMessageDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="@dimen/frg_user_info_image_msg_padding_right"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_less_mid" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_arrow_right"
            android:visibility="gone" />
    </RelativeLayout>


    <TextView
        android:id="@+id/systemMessageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgRoot"
        android:gravity="center"
        android:paddingBottom="@dimen/common_margin_top_bottom"
        android:paddingTop="10dp"
        android:textColor="@color/text_gray_mid"
        android:textSize="12sp" />
</LinearLayout>
