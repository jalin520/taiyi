<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bgRoot"
              android:orientation="vertical"
              android:paddingBottom="@dimen/check_pending_root_linearLayout_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/bg_layout"
        android:orientation="vertical"
        android:paddingLeft="@dimen/check_pending_id_margin_left"
        android:paddingRight="@dimen/check_pending_id_margin_left">


        <RelativeLayout
            android:id="@+id/act_after_sale_rl_title"
            android:layout_width="match_parent"
            android:layout_height="61.18dp"
            android:background="@color/bgLayout"
            >

            <TextView

                android:id="@+id/after_sale_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="服务编号：982737383831"
                android:textColor="@color/text_gray_mid"
                android:textSize="@dimen/text_mid"/>

            <LinearLayout
                android:id="@+id/check_pending_query"
                android:layout_width="@dimen/check_pending_query_width"
                android:layout_height="@dimen/check_pending_query_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_in_after_sale_full"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_pending_query"
                    android:textColor="@color/text_orange"
                    android:textSize="@dimen/text_mid"/>
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/check_pending_line_divide"
            android:background="@color/bg_divide_line"
            />

        <RelativeLayout
            android:id="@+id/act_after_sale_check_content"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="@color/bgLayout"
            >

            <TextView
                android:id="@+id/after_sale_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/check_pending_title_margin_bottom"
                android:layout_marginTop="@dimen/check_pending_title_margin_top"
                android:maxLines="2"
                android:text="鱼跃 制氧机 YU300 鱼跃 制氧机 YU300 鱼跃 制氧机 YU300 鱼跃 制氧机 YU300 鱼跃 制氧机 YU300"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_mid"/>


            <TextView
                android:id="@+id/after_sale_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/after_sale_title"
                android:text="@string/check_pending_state"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_mid"/>

            <TextView
                android:id="@+id/after_sale_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/after_sale_state"
                android:layout_alignParentRight="true"
                android:text="共2件"
                android:textColor="@color/text_gray_mid"
                android:textSize="@dimen/text_mid"/>

            <TextView
                android:id="@+id/after_sale_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/after_sale_amount"
                android:layout_marginBottom="@dimen/check_pending_time_margin_bottom"
                android:layout_marginTop="@dimen/check_pending_time_margin_top"
                android:text="申请时间：2015-10-22 20:30:12"
                android:textColor="@color/text_gray_mid"
                android:textSize="@dimen/text_mid"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/check_pending_line_divide"
            android:background="@color/bg_divide_line"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/compar_input_button_height"
        android:background="@color/bg_layout"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/check_pending_edit_imformation_width"
            android:layout_height="@dimen/check_pending_edit_imformation_height"

            android:background="@drawable/btn_in_after_good_full_comment"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_pending_address"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_mid"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/after_sale_edit_imformation"
            android:layout_width="@dimen/check_pending_edit_imformation_width"
            android:layout_height="@dimen/check_pending_edit_imformation_height"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_in_after_good_full_comment"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_pending_edit_imformation"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_mid"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/check_pending_cancel_width"
            android:layout_height="@dimen/check_pending_edit_imformation_height"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_in_after_good_full_comment"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_pending_cancel"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_mid"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
